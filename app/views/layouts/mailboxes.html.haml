!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Palsmaker'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Palsmaker'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main.panel.panel-default{:role => "main"}
      = render 'layouts/messages'
      .row
        .col-md-12
          .page-header
            %h1 Mailbox
            = link_to "Compose", new_mailboxer_conversation_path, class: 'btn btn-success text-right'
        .spacer

        .col-md-4.panel.panel-default
          .panel-body
            = render 'layouts/mailboxes_nav'

        .col-md-8.panel.panel-default
          .panel-body
            = yield

